{
  "manifest_version": 3,
  "name": "YouTube Shorts Redirect",
  "version": "1.0.0",
  "description": "Automatically redirects YouTube Shorts to regular watch URLs",
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://youtu.be/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "youtube_shorts_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
